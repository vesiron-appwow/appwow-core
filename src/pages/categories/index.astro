---
import StoreLayout from "../../layouts/StoreLayout.astro";

const categories = [
  { id: "business", label: "Business" },
  { id: "productivity", label: "Productivity" },
  { id: "media", label: "Media" },
  { id: "education", label: "Education" },
  { id: "games", label: "Games" }
];
---

<StoreLayout>
  <h1>Categories</h1>
  <p style="opacity:0.7;">
    Browse Instant Apps by category
  </p>

  <ul class="category-list">
    {categories.map(cat => (
      <li>
        <a href={`/categories/${cat.id}`}>
          {cat.label}
        </a>
      </li>
    ))}
  </ul>
</StoreLayout>

<style>
.category-list {
  padding: 0;
  margin: 0;
}

.category-list li {
  list-style: none;
  margin-bottom: 12px;
}

.category-list a {
  display: block;
  padding: 12px;
  border: 1px solid #ddd;
  border-radius: 10px;
  text-decoration: none;
}

.category-list a:hover {
  background: #f7f7f7;
}
</style>
