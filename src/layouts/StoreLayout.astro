---
const title = Astro.props.title ?? "AppWow";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
  </head>

  <body>
   <header class="site-header">
  <div class="wrap header-inner">
    <a href="/" class="logo">AppWow</a>

    <button
      class="hamburger"
      aria-label="Menu"
      onclick="document.body.classList.toggle('menu-open')"
    >
      â˜°
    </button>
  </div>

  <nav class="hamburger-menu">
    <ul>
      <li><a href="/developer/submit">Developer submission</a></li>
      <li><a href="/developer/review">Editorial review</a></li>
      <li><a href="/admin">Admin / control</a></li>
    </ul>
  </nav>
</header>



    <main class="store-canvas">
  <div class="store-frame">
    <slot />
  </div>
</main>


   <footer class="site-footer">
  <div class="wrap">
    <nav class="footer-nav">
      <a href="/">Store</a>
      <a href="/categories">Categories</a>
      <a href="/search">Search</a>
      
    </nav>
  </div>
</footer>

  </body>
</html>
<style>
:root {
  --bg: #fafafa;
  --text: #111;
  --muted: #666;
  --border: #e5e5e5;
  --accent: #000;
  --card-bg: #fff;
}

* {
  box-sizing: border-box;
}

body {
  margin: 0;
  font-family: system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI",
    Roboto, Helvetica, Arial, sans-serif;
  background: var(--bg);
  color: var(--text);
  line-height: 1.5;
}

a {
  color: inherit;
}

.wrap {
  max-width: 960px;
  margin: 0 auto;
  padding: 16px;
}

.site-header {
  background: #fff;
  border-bottom: 1px solid var(--border);
}

.site-header .wrap {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.logo {
  font-weight: 700;
  font-size: 18px;
  text-decoration: none;
}

.top-nav a {
  margin-left: 16px;
  text-decoration: none;
  font-size: 14px;
  opacity: 0.8;
}

.top-nav a:hover {
  opacity: 1;
}

.site-footer {
  margin-top: 48px;
  padding-top: 24px;
  border-top: 1px solid var(--border);
  background: #fff;
}

.site-footer p {
  margin: 0;
  font-size: 13px;
  opacity: 0.6;
}
.footer-nav {
  display: flex;
  justify-content: space-around;
  gap: 12px;
}

.footer-nav a {
  text-decoration: none;
  font-size: 14px;
  opacity: 0.85;
  padding: 8px 6px;
}

.footer-nav a:hover {
  opacity: 1;
}
.site-header {
  position: relative;
}
.header-inner {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.hamburger {
  font-size: 20px;
  background: none;
  border: none;
  cursor: pointer;
}

.hamburger-menu {
  position: absolute;
  top: 100%;
  right: 0;
  background: #fff;
  border: 1px solid #ddd;
  border-radius: 10px;
  padding: 12px;
  display: none;
  z-index: 1000;
  min-width: 220px;
}


body.menu-open .hamburger-menu {
  display: block;
}

.hamburger-menu ul {
  list-style: none;
  padding: 0;
  margin: 0;
}

.hamburger-menu li {
  margin-bottom: 8px;
}

.hamburger-menu li:last-child {
  margin-bottom: 0;
}

.hamburger-menu a {
  text-decoration: none;
  font-size: 14px;
}
/* ===== Global Store Canvas ===== */

.store-canvas {
  background: #f5f5f7;
  min-height: 100vh;
  padding: 16px 12px 80px;
}

.store-frame {
  max-width: 720px;
  margin: 0 auto;
  background: #ffffff;
  border-radius: 18px;
  padding: 20px 18px 32px;
}

/* ===== Typography ===== */

h1 {
  font-size: 28px;
  margin-bottom: 4px;
  letter-spacing: -0.02em;
}

h2 {
  font-size: 18px;
  margin-bottom: 12px;
  margin-top: 24px;
}

p {
  font-size: 15px;
  line-height: 1.5;
}

/* ===== Section Rhythm ===== */

section {
  margin-bottom: 28px;
}

/* ===== Links ===== */

a {
  color: inherit;
  text-decoration: none;
}
/* ===== Page Title Pairing Polish ===== */

/* Only affects a paragraph immediately following an h1 */
.store-frame h1 + p {
  margin-top: 0;
  margin-bottom: 18px;
  opacity: 0.65;
}

/* Optional: slightly stronger page titles without changing global h1 */
.store-frame h1 {
  font-size: 30px;
}


</style>
